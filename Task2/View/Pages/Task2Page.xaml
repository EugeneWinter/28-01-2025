<Page x:Class="WpfApp6.View.Pages.Task2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task2Page">

    <Grid>

        <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите c: "
                       FontSize="18"
                       FontWeight="Bold"/>
                <TextBox Width="70"
                     x:Name="TbC"
                     FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    Margin="0 10 0 0">
                <TextBlock Text="Введите x: "
                       FontSize="18"
                       FontWeight="Bold"/>
                <TextBox Width="70"
                     x:Name="TbX"
                     FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    Margin="0 10 0 0">
                <TextBlock Text="Введите t: "
                    FontSize="18"
                     FontWeight="Bold"/>
                <TextBox Width="70"
                  x:Name="TbT"
                  FontSize="18"/>
            </StackPanel>

            <StackPanel>
                <Button Content="Ответ"
                    Margin="0 10 0 0"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnTask2"
                    Click="BtnTask2_Click"
                    Background="Transparent"
                    BorderBrush="Green"
                    Padding="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
